# === .env.example (Blue Team Swarm v1.5) ===
# Copy this file to .env and update with your actual values

# === LLM Provider Configuration ===
LLM_PROVIDER=OPENAI
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=
OLLAMA_BASE_URL=http://host.docker.internal:11434

# === Application Configuration ===
# Application settings
DEBUG=false
LOG_LEVEL=INFO
APP_NAME=Blue Swarm Orchestrator
APP_VERSION=1.5.0

# === Service URLs ===
# Internal service URLs (for container communication)
REDIS_URL=redis://blue-swarm-redis:6379/0
QDRANT_URL=http://blue-swarm-qdrant:6333

# === Security Configuration ===
# Redis password
REDIS_PASSWORD=secure_redis_password_change_me

# N8N authentication
N8N_HOST=localhost
N8N_WEBHOOK_URL=http://localhost:5678/
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=secure_n8n_password_change_me

# Grafana authentication
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_grafana_password_change_me

# === External Service Configuration ===
# ZPA (Zscaler Private Access)
ZPA_ENABLE_ENFORCE=false
ZPA_BASE_URL=
ZPA_CLIENT_ID=
ZPA_CLIENT_SECRET=
ZPA_CLOUD=
ZPA_APP_SEGMENTS_PATH=mgmtconfig/v2/admin/applications
ZPA_POLICIES_PATH=mgmtconfig/v2/admin/applications

# Rapid7 IDR
R7_IDR_BASE=
R7_IDR_API_KEY=
R7_IDR_NOTABLES_PATH=idr/v1/notables

# JIRA
JIRA_ENABLE_WRITE=false
JIRA_BASE_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=SEC

# === Monitoring and Logging ===
# Prometheus configuration
PROMETHEUS_RETENTION=200h
PROMETHEUS_SCRAPE_INTERVAL=15s

# Logging configuration
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# === Resource Limits ===
# Container resource limits (in MB)
ORCHESTRATOR_MEMORY_LIMIT=512
ORCHESTRATOR_CPU_LIMIT=1.0
N8N_MEMORY_LIMIT=512
N8N_CPU_LIMIT=1.0
REDIS_MEMORY_LIMIT=256
REDIS_CPU_LIMIT=0.5
QDRANT_MEMORY_LIMIT=512
QDRANT_CPU_LIMIT=1.0
PROMETHEUS_MEMORY_LIMIT=512
PROMETHEUS_CPU_LIMIT=1.0
GRAFANA_MEMORY_LIMIT=256
GRAFANA_CPU_LIMIT=0.5

# === Health Check Configuration ===
# Health check intervals (in seconds)
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40

# === Development Configuration ===
# Timezone settings
GENERIC_TIMEZONE=America/Chicago

# Development settings
DEV_MODE=false
HOT_RELOAD=false
DEBUG_PORT=5679

# === Backup and Persistence ===
# Backup settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Data persistence paths
UPLOADS_PATH=/app/uploads
LOGS_PATH=/app/logs

# === Network Configuration ===
# Network settings
NETWORK_MODE=default
FRONTEND_NETWORK=blue-swarm-frontend
INTERNAL_NETWORK=blue-swarm-internal

# === SSL/TLS Configuration ===
# SSL settings (for future implementation)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# === Additional Environment Variables ===
# Add any additional environment variables here
# CUSTOM_VAR=value
